---
import TapeImage from '@/assets/header-tape.png';
import HeaderLink from '@/components/layout/HeaderLink.astro';
import { SITE_TITLE } from '@/consts';
import { Image } from 'astro:assets';
---

<header class="bg-background sticky top-0 pt-6 pb-7 md:pb-11">
  <nav class="section flex flex-col justify-between px-6 md:flex-row">
    <a href="/" class="bouncy inline-block">{SITE_TITLE}</a>
    <div class="text-right">
      <HeaderLink href="/games">games</HeaderLink>
      <HeaderLink href="/about">about</HeaderLink>
      <HeaderLink href="/blog">blog</HeaderLink>
    </div>
  </nav>
  <Image
    src={TapeImage}
    loading="eager"
    alt="a measuring tape extended to 23 centimeters"
    class="pointer-events-none absolute right-0 left-0 mx-auto mt-2 md:translate-x-20"
  />
</header>
